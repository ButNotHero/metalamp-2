{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "rules": {
    "max-line-length": [
      true,
      140
    ],
    "no-console": false,
    "quotemark": [
      true,
      "single"
    ]
  }
}
