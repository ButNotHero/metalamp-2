mixin action-btn(text, mods)

  -
    // список модификаторов
    var allMods = '';
    if (typeof (mods) !== 'undefined' && mods) {
      let modsList = mods.split(',');
      for (let i = 0; i < modsList.length; i++) {
        allMods = allMods + ` action-btn__${ modsList[i].trim() }`;
      }
    }

  button.action-btn(class=allMods)&attributes(attributes) #{text}
