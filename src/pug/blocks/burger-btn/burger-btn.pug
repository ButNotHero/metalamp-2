mixin burger-btn(mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      let modsList = mods.split(',');
      for (let i = 0; i < modsList.length; i++) {
        allMods = allMods + ` burger-btn__${modsList[i].trim()}`;
      }
    }

  button.burger-btn(class=allMods)&attributes(attributes)
    span
    span
    span
